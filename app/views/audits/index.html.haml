%h1 Audit Log

%h2= @startdate.strftime("%B %d, %Y")

=link_to "#{@previous_date.strftime('%b %d, %Y')}", admin_audits_path + "?startdate=#{@previous_date}" unless @previous_date.nil?
=link_to "#{@next_date.strftime('%b %d, %Y')}", admin_audits_path + "?startdate=#{@next_date}" unless @next_date.nil?

=render :partial => "quick_filter"

%table.index
  %thead
    %tr
      %th="Date / Time"
      %th="IP Address"
      %th="User"
      %th="Event Type"
      %th="Message"
  %tbody
    -@audits.each do |a|
      %tr
        %td= a.created_at.to_formatted_s(:db)
        %td= a.ip_address
        %td= a.user.name
        %td= a.event_type
        %td= a.log_message